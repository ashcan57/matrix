<?xml version="1.0" encoding="UTF-8"?>
<addon id="repository.custom.build"
       name="Custom Build Repository"
       version="1.0.0"
       provider-name="ashcan57">

    <extension point="xbmc.addon.repository"
               name="Custom Build Repo">

        <!-- Where Kodi reads the list of addons -->
        <info compressed="false">https://raw.githubusercontent.com/ashcan57/matrix/main/addons.xml</info>

        <!-- MD5 checksum for addons.xml -->
        <checksum>https://raw.githubusercontent.com/ashcan57/matrix/main/addons.xml.md5</checksum>

        <!-- Where Kodi downloads addon ZIP files -->
        <datadir zip="true">https://raw.githubusercontent.com/ashcan57/matrix/main/</datadir>

    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>Custom Build Repository</summary>
        <description>Hosts the Matrix Wizard and future addons.</description>
        <platform>all</platform>
    </extension>

</addon>
