<?xml version="1.0" encoding="UTF-8"?>
<addon id="repository.custom.build"
       name="Custom Build Repository"
       version="1.0.0"
       provider-name="ashcan57">

    <requires>
        <import addon="xbmc.addon" version="21.0.0" />
    </requires>

    <extension point="xbmc.addon.repository" name="Custom Build Repo">

        <!-- Kodi 21 and newer -->
        <dir minversion="21.0.0">
            <info>https://raw.githubusercontent.com/ashcan57/matrix/main/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/ashcan57/matrix/main/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/ashcan57/matrix/main/</datadir>
        </dir>

    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>Custom Build Repository</summary>
        <description>Hosts the Matrix Wizard and future addons.</description>
        <platform>all</platform>
    </extension>

</addon>
