<?xml version="1.0" encoding="UTF-8"?>
<addons>

  <!-- ================= REPOSITORY ADDON ================= -->
  <addon id="repository.custom.build"
         name="Custom Build Repository"
         version="1.0.0"
         provider-name="ashcan57">

    <extension point="xbmc.addon.repository" name="Custom Build Repository">

      <dir minversion="21.0.0">
        <info compressed="false">https://ashcan57.github.io/repo/addons.xml</info>
        <checksum>https://ashcan57.github.io/repo/addons.xml.md5</checksum>
        <datadir zip="true">https://ashcan57.github.io/repo/</datadir>
      </dir>

    </extension>

    <extension point="xbmc.addon.metadata">
      <summary>Custom Build Repository</summary>
      <description>Repository for Encore Build Installer</description>
      <platform>all</platform>
    </extension>

  </addon>


  <!-- =========== INSTALLER ADDON ================= -->
  <addon id="script.custom.build.installer"
         name="Custom Build Installer (Encore)"
         version="1.0.0"
         provider-name="ashcan57">

    <extension point="xbmc.python.script" library="default.py"/>

    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.addon.metadata">
      <summary>Encore Build Installer</summary>
      <description>Installs the Encore Custom Build</description>
      <platform>all</platform>
    </extension>

  </addon>

</addons>
