<?xml version="1.0" encoding="utf-8"?>
<addons>
  <addon id="repository.custom.build" name="Custom Build Repository" version="1.0.0" provider-name="ashcan57">
    
    
    <extension point="xbmc.addon.repository" name="Custom Build Repository">
      
        
        
      <dir>
        
            
        <info compressed="true">https://ashcan57.github.io/matrix/addons.xml</info>
        
            
        <checksum>https://ashcan57.github.io/matrix/addons.xml.md5</checksum>
        
            
        <datadir zip="true">https://www.dropbox.com/scl/fi/glc4wagx7mmdvso88jmiu/</datadir>
        
        
      </dir>
      
    
    </extension>
    
    
    <extension point="xbmc.addon.metadata">
      
        
      <summary>Custom Build Repository</summary>
      
        
      <description>Repository for script.custom.build.installer (encore build)</description>
      
        
      <platform>all</platform>
      
        
      <license>GPL-3.0-only</license>
      
    
    </extension>
    

  </addon>
  <addon id="script.custom.build.installer" name="Custom Build Installer (Encore)" version="1.0.0" provider-name="ashcan57">
    
        
    <extension point="xbmc.python.script" library="default.py"/>
    
        
    <requires>
      
            
      <import addon="xbmc.python" version="3.0.0"/>
      
        
    </requires>
    
        
    <extension point="xbmc.addon.metadata">
      
            
      <summary>Encore Build Installer</summary>
      
            
      <description>Installs the Encore custom build</description>
      
            
      <platform>all</platform>
      
        
    </extension>
    

  </addon>
</addons>
