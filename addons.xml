<?xml version="1.0" encoding="utf-8"?>
<addons>
  <addon id="repository.custom.build" name="Custom Build Repository" version="1.0.0" provider-name="ashcan57">
    
  
    <extension point="xbmc.addon.repository" name="Custom Build Repository">
      
    
      <dir>
        
      
        <info compressed="false">https://ashcan57.github.io/matrix/addons.xml</info>
        
      
        <checksum>https://ashcan57.github.io/matrix/addons.xml.md5</checksum>
        
      
        <datadir zip="true">https://ashcan57.github.io/matrix/</datadir>
        
    
      </dir>
      
  
    </extension>
    
  
    <extension point="xbmc.addon.metadata">
      
    
      <summary>Repository for Custom Kodi Build Installer</summary>
      
    
      <description>Install this repository to get access to the Custom Build Installer add-on.</description>
      
    
      <disclaimer/>
      
    
      <platform>all</platform>
      
    
      <assets>
        
      
        <icon>icon.png</icon>
        
      
        <fanart>fanart.jpg</fanart>
        
    
      </assets>
      
  
    </extension>
    

  </addon>
  <addon id="script.custom.build.installer" name="Ashcan57 Wizard" version="2.0.0" provider-name="ashcan57">
    
    
    <requires>
      
        
      <import addon="xbmc.python" version="3.0.0"/>
      
        
      <import addon="script.module.requests" optional="true"/>
      
    
    </requires>
    
    
    <extension point="xbmc.python.script" library="default.py"/>
    
    
    <extension point="xbmc.addon.metadata">
      
        
      <summary>Ashcan57 Encore Wizard + Maintenance</summary>
      
        
      <description>Full wizard with fresh install and maintenance tools</description>
      
        
      <platform>all</platform>
      
        
      <assets>
        
            
        <icon>icon.png</icon>
        
            
        <fanart>fanart.jpg</fanart>
        
        
      </assets>
      
    
    </extension>
    

  </addon>
</addons>
